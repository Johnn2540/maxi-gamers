<script>
  // Initialize socket connection
  const socket = io();

  // Language translations
  const translations = {
    EN: {
      brand: "üéÆ Maximum Gamers",
      signIn: "Sign In",
      register: "Register",
      searchPlaceholder: "Search..."
    },
    SW: {
      brand: "üéÆ Wachezaji Wakuu",
      signIn: "Ingia",
      register: "Jisajili",
      searchPlaceholder: "Tafuta..."
    }
  };

  // Language switcher
  function switchLanguage() {
    const selectedLang = document.getElementById("languageSwitcher").value;
    document.getElementById("brandText").innerText = translations[selectedLang].brand;
    document.getElementById("signInBtn").innerText = translations[selectedLang].signIn;
    document.getElementById("registerBtn").innerText = translations[selectedLang].register;
    document.getElementById("universalSearchInput").setAttribute("placeholder", translations[selectedLang].searchPlaceholder);
  }

  // Universal search function
  function universalSearch(event) {
    event.preventDefault();
    const input = document.getElementById("universalSearchInput").value.trim().toLowerCase();

    // Remove old highlights
    document.querySelectorAll("mark.search-highlight").forEach(el => {
      el.outerHTML = el.innerText;
    });

    if (input === "") return;

    // Search across all text nodes in body
    const bodyText = document.body.innerHTML;
    const regex = new RegExp("(" + input + ")", "gi");
    document.body.innerHTML = bodyText.replace(regex, '<mark class="search-highlight">$1</mark>');
  }

  // Top bar messages
  let messages = [];
  let currentIndex = 0;
  const container = document.getElementById("topBarMessages");

  async function fetchTopBarMessages() {
    const res = await fetch("/top-bar/json");
    messages = await res.json();
    renderMessages();
  }

  function renderMessages() {
    container.innerHTML = "";
    messages.forEach((msg, index) => {
      const span = document.createElement("span");
      span.classList.add("top-bar-msg");
      if (index === 0) span.classList.add("active");
      span.textContent = msg.content;
      container.appendChild(span);
    });
    currentIndex = 0;
  }

  function nextMessage() {
    if (messages.length === 0) return;
    const spans = container.querySelectorAll(".top-bar-msg");
    spans[currentIndex].classList.remove("active");
    currentIndex = (currentIndex + 1) % spans.length;
    spans[currentIndex].classList.add("active");
  }

  async function initTopBar() {
    await fetchTopBarMessages();
    setInterval(nextMessage, 5000);
  }

  // Socket.IO for real-time updates
  socket.on("topBarUpdate", async () => {
    await fetchTopBarMessages();
  });

  // Sale products carousel
  async function fetchSaleProducts() {
    try {
      const res = await fetch("/api/products/sale");
      const products = await res.json();
      const container = document.getElementById("sale-products-container");
      container.innerHTML = "";

      products.forEach((product, index) => {
        container.innerHTML += `
            <div class="carousel-item ${index === 0 ? "active" : ""}">
              <div class="row justify-content-center">
                <div class="col-md-4">
                  <div class="card shadow-lg border-0">
                    <img src="${product.image}" class="card-img-top" alt="${product.name}">
                    <div class="card-body text-center">
                      <h5 class="card-title text-dark">${product.name}</h5>
                      <p class="text-muted">
                        <span class="text-decoration-line-through">KSH ${product.originalPrice}</span>
                        <span class="fw-bold text-success">KSH ${product.salePrice}</span>
                      </p>
                      <button class="btn btn-success w-100">
                        <i class="bi bi-cart"></i> Add to Cart
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          `;
      });
    } catch (err) {
      console.error("Error loading sale products:", err);
    }
  }


  // Initialize everything when DOM is loaded
  document.addEventListener('DOMContentLoaded', () => {
    initTopBar();
    fetchSaleProducts();
    renderLeaderboardHome();

    // Initialize carousel
    const carousel = new bootstrap.Carousel("#saleProductsCarousel", {
      interval: 5000,
      ride: "carousel"
    });

    // Initialize testimonial carousel
    const testimonialCarousel = new bootstrap.Carousel("#testimonialCarousel");

    // Refresh leaderboard when admin updates
    socket.on("leaderboardUpdate", renderLeaderboardHome);
  });

  // Back to Top functionality
function initBackToTop() {
  const backToTopButton = document.getElementById('backToTop');
  
  // Show/hide button based on scroll position
  window.addEventListener('scroll', () => {
    if (window.pageYOffset > 300) {
      backToTopButton.classList.add('show');
    } else {
      backToTopButton.classList.remove('show');
    }
  });
  
  // Scroll to top when clicked
  backToTopButton.addEventListener('click', () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  });
}

// Initialize back to top button when DOM is loaded
document.addEventListener('DOMContentLoaded', initBackToTop);
</script>

