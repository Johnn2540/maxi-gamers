<script>
  // Reusable cart hook
  function hookCartButtons(selector) {
    document.querySelectorAll(selector).forEach(btn => {
      btn.addEventListener('click', () => {
        const id = btn.dataset.id;
        const title = btn.dataset.title;
        const salePrice = parseFloat(btn.dataset.price);
        // Add to cart logic here
        console.log("Added to cart:", {id, title, salePrice});
        updateCartBadge();
      });
    });
  }

  async function loadSaleProducts() {
    try {
      const res = await fetch('/products/json');
      const products = await res.json();
      const container = document.getElementById('sale-products-container');

      if (!products.length) {
        container.innerHTML = `
          <div class="carousel-item active text-center py-5">
            <h5 class="text-muted">No products available</h5>
          </div>`;
        return;
      }

      // Split products into groups of 3 (desktop view)
      const chunkSize = window.innerWidth < 768 ? 1 : 3;
      const productChunks = [];
      for (let i = 0; i < products.length; i += chunkSize) {
        productChunks.push(products.slice(i, i + chunkSize));
      }

      // Build carousel slides
      container.innerHTML = productChunks.map((group, idx) => `
        <div class="carousel-item ${idx === 0 ? 'active' : ''}">
          <div class="row justify-content-center">
            ${group.map(p => `
              <div class="col-12 col-sm-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100 border-0">
                  <img src="${p.image || '/images/placeholder.png'}" 
                       class="card-img-top" 
                       alt="${p.title}" 
                       style="height:220px; object-fit:cover; border-radius:0.5rem 0.5rem 0 0;">
                  <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-truncate">${p.title}</h5>
                    <p class="card-text small text-muted text-truncate">${p.description}</p>
                    <p class="mb-2">
                      <span class="text-danger text-decoration-line-through">Ksh ${p.marketPrice}</span>
                      <span class="fw-bold text-success ms-2">Ksh ${p.salePrice}</span>
                    </p>
                    <button class="btn btn-success mt-auto add-to-cart" 
                            data-id="${p._id}" 
                            data-title="${p.title}" 
                            data-price="${p.salePrice}">
                      <i class="bi bi-cart-plus"></i> Add to Cart
                    </button>
                  </div>
                </div>
              </div>
            `).join('')}
          </div>
        </div>
      `).join('');

      // Hook up cart buttons for this section
      hookCartButtons('#sale-products-container .add-to-cart');

    } catch (err) {
      console.error('Error loading sale products:', err);
      document.getElementById('sale-products-container').innerHTML = `
        <div class="carousel-item active text-center py-5">
          <h5 class="text-danger">Error loading products</h5>
        </div>`;
    }
  }

  window.addEventListener('DOMContentLoaded', loadSaleProducts);
  window.addEventListener('resize', loadSaleProducts);
</script>


