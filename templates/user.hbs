  <style>
    :root {
      --primary-color: #0d6efd;
      --secondary-color: #00ff99;
      --dark-bg: #0a0a0a;
      --card-bg: #111;
      --text-light: #f8f9fa;
      --text-muted: #6c757d;
    }
    
    body {
      background: var(--dark-bg);
      color: var(--text-light);
      padding-bottom: 70px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      overflow-x: hidden;
    }
    
    /* Navigation Styles */
    .navbar-brand img {
      height: 40px;
    }
    
    .bottom-nav {
      position: fixed;
      bottom: 0;
      left: 0;
      right: 0;
      background: var(--primary-color);
      border-top: 1px solid rgba(255, 255, 255, 0.1);
      z-index: 1000;
    }
    
    .bottom-nav .nav-link {
      color: white;
      font-size: 0.75rem;
      padding: 0.5rem;
    }
    
    .bottom-nav .nav-link.active {
      font-weight: bold;
      border-top: 2px solid var(--secondary-color);
    }
    
    /* Card Styles */
    .feature-card {
      transition: all 0.3s ease;
      background: var(--card-bg);
      border: 2px solid var(--secondary-color);
      border-radius: 12px;
      overflow: hidden;
      height: 100%;
    }
    
    .feature-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 0 25px var(--secondary-color);
    }
    
    /* Text Effects */
    h1, h2, h3, h4, h5, h6 {
      text-shadow: 0 0 5px var(--secondary-color);
    }
    
    /* Table Styles */
    table, th, td {
      border-color: var(--secondary-color) !important;
    }
    
    /* Chat Widget */
    .chat-widget {
      position: fixed;
      bottom: 90px;
      right: 20px;
      background: #25d366;
      color: white;
      border-radius: 50%;
      width: 60px;
      height: 60px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 28px;
      cursor: pointer;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
      z-index: 1000;
      animation: pulseZoom 1.5s infinite ease-in-out;
    }
    
    .chat-widget:hover {
      background: #1ebe5d;
      transform: scale(1.1);
    }
    
    @keyframes pulseZoom {
      0%, 100% {
        transform: scale(1);
        box-shadow: 0 0 10px #25d366, 0 0 20px #25d366;
      }
      50% {
        transform: scale(1.15);
        box-shadow: 0 0 20px #25d366, 0 0 30px #25d366;
      }
    }
    
    /* Search Highlight */
    mark.search-highlight {
      background: yellow;
      color: black;
      padding: 0 2px;
      border-radius: 3px;
    }
    
    /* Section Spacing */
    section {
      padding: 2rem 0;
    }
    
    /* Hero Section Styles */
    .hero-section {
      min-height: 60vh;
      position: relative;
      overflow: hidden;
    }
    
    .hero-title {
      font-size: 2.5rem;
    }
    
    .hero-subtitle {
      font-size: 1.2rem;
    }
    
    /* Responsive Adjustments */
    @media (max-width: 768px) {
      .hero-content {
        padding: 20px;
      }
      
      .hero-title {
        font-size: 2rem;
      }
      
      .hero-subtitle {
        font-size: 1rem;
      }
      
      section {
        padding: 1.5rem 0;
      }
      
      .btn-lg {
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
      }
    }
    
    @media (max-width: 576px) {
      .hero-title {
        font-size: 1.75rem;
      }
      
      .hero-subtitle {
        font-size: 0.9rem;
      }
      
      .btn {
        width: 100%;
        margin-bottom: 0.5rem;
      }
      
      .d-flex.gap-3 {
        flex-direction: column;
      }
      
      .feature-card {
        margin-bottom: 1rem;
      }
    }
    
    /* Top Bar Messages */
    #topBar {
      height: 30px;
      overflow: hidden;
    }
    
    @keyframes scrollLeft {
      0%   { transform: translateX(100%); }
      100% { transform: translateX(-100%); }
    }
    
    /* Loan Calculator Table */
    .table-responsive {
      overflow-x: auto;
    }
    
    /* Testimonial Cards */
    .testimonial-card {
      max-width: 500px;
      border: 1px solid var(--secondary-color);
      border-radius: 10px;
    }
    
    /* Footer Styles */
    .shiny-line {
      height: 4px;
      width: 100%;
      background: linear-gradient(90deg, #ffd700, #ff8c00, #ffd700);
      animation: shine 2s linear infinite;
      margin-bottom: 15px;
      background-size: 200% 100%;
    }
    
    @keyframes shine {
      0% {
        background-position: 0% 50%;
      }
      100% {
        background-position: 100% 50%;
      }
    }
    
    footer a {
      transition: color 0.3s ease;
    }
    
    footer a:hover {
      color: var(--secondary-color) !important;
    }
    
    /* Pulse / Zoom Animation */
    @keyframes pulseZoom {
      0% { transform: scale(1); }
      50% { transform: scale(1.1); }
      100% { transform: scale(1); }
    }

    .login-box {
      text-decoration: none;
      animation: pulseZoom 2s infinite;
      transition: transform 0.2s ease-in-out;
    }

    .login-box:hover {
      transform: scale(1.15);
      background-color: #ffc107; /* keep warning color on hover */
    }
    
    /* Back to Top Arrow */
    .back-to-top {
      position: fixed;
      bottom: 120px;
      left: 20px; /* Changed from right to left */
      width: 50px;
      height: 50px;
      background: var(--primary-color);
      color: white;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
      cursor: pointer;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s ease;
      z-index: 999;
      box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
    }

    .back-to-top.show {
      opacity: 1;
      visibility: visible;
    }

    .back-to-top:hover {
      background: #0b5ed7;
      transform: translateY(-3px);
