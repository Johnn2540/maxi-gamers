  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Custom Scripts -->
  <script>
    // ========== Top Bar Messages ==========
    async function displayTopBar() {
      try {
        const res = await fetch('/top-bar/active');
        const data = await res.json();
        const container = document.getElementById('topBarMessages');

        const messages = data.success ? data.messages : [];

        if (!messages.length) {
          container.innerHTML = `<span>No announcements</span>`;
          return;
        }

        container.innerHTML = `
          <div style="white-space: nowrap; animation: scrollLeft 15s linear infinite;">
            ${messages.map(msg => `<span class="mx-4">${msg.content}</span>`).join("")}
          </div>
        `;
      } catch (err) {
        console.error("Error loading top bar:", err);
        document.getElementById('topBarMessages').innerHTML = 
          `<span class="text-danger">Error loading announcements</span>`;
      }
    }

    // ========== Load On-Sale Products (Display Only) ==========
    async function loadSaleProducts() {
      try {
        const res = await fetch('/products/json');
        const products = await res.json();
        const saleProducts = products.filter(p => p.onSale === true);
        const container = document.getElementById('sale-products-container');

        if (!saleProducts.length) {
          container.innerHTML = `
            <div class="carousel-item active text-center py-5">
              <h5 class="text-muted">No products currently on sale</h5>
            </div>`;
          return;
        }

        // Split products into chunks (3 per slide for desktop)
        const chunkSize = window.innerWidth < 768 ? 1 : 3;
        const productChunks = [];
        for (let i = 0; i < saleProducts.length; i += chunkSize) {
          productChunks.push(saleProducts.slice(i, i + chunkSize));
        }

        container.innerHTML = productChunks.map((group, idx) => `
          <div class="carousel-item ${idx === 0 ? 'active' : ''}">
            <div class="row justify-content-center">
              ${group.map(p => {
                // Handle image
                let imageUrl = '/images/placeholder.png';
                if (p.images && Array.isArray(p.images) && p.images.length > 0) {
                  imageUrl = typeof p.images[0] === 'string'
                    ? p.images[0]
                    : p.images[0].url || '/images/placeholder.png';
                } else if (p.image) {
                  imageUrl = p.image;
                }

                return `
                  <div class="col-12 col-sm-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100 border-0">
                      <img src="${imageUrl}" 
                           class="card-img-top" 
                           alt="${p.title}" 
                           style="height:220px; object-fit:cover; border-radius:0.5rem 0.5rem 0 0;"
                           onerror="this.src='/images/placeholder.png'">
                      <div class="card-body">
                        <h5 class="card-title text-dark text-truncate">${p.title}</h5>
                        <p class="card-text small text-muted text-truncate">${p.description || ''}</p>
                        <p class="mb-0">
                          <span class="text-danger text-decoration-line-through">Ksh ${p.marketPrice}</span>
                          <span class="fw-bold text-success ms-2">Ksh ${p.salePrice}</span>
                        </p>
                      </div>
                    </div>
                  </div>
                `;
              }).join('')}
            </div>
          </div>
        `).join('');
      } catch (err) {
        console.error('Error loading sale products:', err);
        document.getElementById('sale-products-container').innerHTML = `
          <div class="carousel-item active text-center py-5">
            <h5 class="text-danger">Error loading products</h5>
          </div>`;
      }
    }

    // ========== Directions Function ==========
    function openDirections() {
      const spinner = document.getElementById("spinner");
      const button = document.getElementById("getDirectionsBtn");
      spinner.classList.remove("d-none");
      button.disabled = true;

      if (navigator.geolocation) {
        navigator.geolocation.getCurrentPosition(function(position) {
          const lat = position.coords.latitude;
          const lng = position.coords.longitude;
          const destination = encodeURIComponent("Maximum Gamers K.M Opposite Student Centre");

          // Update iframe and link
          const iframe = document.getElementById("directionsMap");
          iframe.src = `https://www.google.com/maps/embed/v1/directions?key=AIzaSyDnphs9rressecIYYKehF89dWILJTWcMEs&origin=${lat},${lng}&destination=${destination}`;
          const mapsLink = document.getElementById("openInMaps");
          mapsLink.href = `https://www.google.com/maps/dir/?api=1&origin=${lat},${lng}&destination=${destination}`;

          document.getElementById("mapContainer").scrollIntoView({ behavior: "smooth" });

          setTimeout(() => {
            spinner.classList.add("d-none");
            button.disabled = false;
          }, 1500);

        }, function() {
          alert("Could not get your location. Please enable GPS.");
          spinner.classList.add("d-none");
          button.disabled = false;
        });
      } else {
        alert("Geolocation is not supported by your browser.");
        spinner.classList.add("d-none");
        button.disabled = false;
      }
    }

    // ========== Loan Calculator ==========
    function calculateLoan() {
      const value = parseFloat(document.getElementById('loanValue').value);
      const duration = parseInt(document.getElementById('loanDuration').value);

      if (!value || !duration || value <= 0 || duration <= 0) {
        document.getElementById('loanResult').innerHTML =
          `<div class='alert alert-warning mt-3'>Please enter valid values.</div>`;
        return;
      }

      const interestRate = 0.30; // 30% per month
      let totalInterest = 0;

      // Build month-by-month table
      let tableHTML = `
        <div class="table-responsive mt-3">
          <table class="table table-dark table-striped text-white">
            <thead>
              <tr>
                <th>Month</th>
                <th>Interest (KES)</th>
                <th>Principal (KES)</th>
                <th>Total Due (KES)</th>
              </tr>
            </thead>
            <tbody>
      `;

      for (let month = 1; month <= duration; month++) {
        const monthlyInterest = value * interestRate;
        totalInterest += monthlyInterest;
        const totalDue = value + totalInterest;

        tableHTML += `
          <tr>
            <td>${month}</td>
            <td>${monthlyInterest.toFixed(2)}</td>
            <td>${value.toFixed(2)}</td>
            <td>${totalDue.toFixed(2)}</td>
          </tr>
        `;
      }

      tableHTML += `</tbody></table></div>`;

      // Summary
      const resultHTML = `
        <div class='alert alert-info mt-3'>
          Estimated Total Repayment: KES ${(value + totalInterest).toFixed(2)} <br>
          (Principal: KES ${value.toFixed(2)}, Total Interest: KES ${totalInterest.toFixed(2)})
        </div>
      `;

      document.getElementById('loanResult').innerHTML = resultHTML + tableHTML;
    }

    // ========== Leaderboard ==========
    const leaderboardBody = document.getElementById("leaderboardBody");

    // Render leaderboard
    function renderLeaderboard(players) {
      leaderboardBody.innerHTML = "";

      if (!players.length) {
        leaderboardBody.innerHTML = `<tr><td colspan="3" class="text-center">No players yet</td></tr>`;
        return;
      }

      players.forEach((p, i) => {
        let rankIcon = i === 0 ? "ü•á" : i === 1 ? "ü•à" : i === 2 ? "ü•â" : i + 1;
        leaderboardBody.innerHTML += `
          <tr>
            <td>${rankIcon}</td>
            <td>${p.player}</td>
            <td>${p.score}</td>
          </tr>`;
      });
    }

    // Fetch leaderboard once on page load
    async function loadLeaderboard() {
      try {
        const res = await fetch("/top-leaderboard");
        const data = await res.json();
        renderLeaderboard(data);
      } catch (err) {
        console.error("Error fetching leaderboard:", err);
        leaderboardBody.innerHTML = `<tr><td colspan="3" class="text-center text-danger">Error loading leaderboard</td></tr>`;
      }
    }

    // ========== Back to Top functionality ==========
    function initBackToTop() {
      const backToTopButton = document.getElementById('backToTop');
      
      // Show/hide button based on scroll position
      window.addEventListener('scroll', () => {
        if (window.pageYOffset > 300) {
          backToTopButton.classList.add('show');
        } else {
          backToTopButton.classList.remove('show');
        }
      });
      
      // Scroll to top when clicked
      backToTopButton.addEventListener('click', () => {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      });
    }

    // ========== Initialize everything when DOM is loaded ==========
    document.addEventListener('DOMContentLoaded', () => {
      displayTopBar();
      loadSaleProducts();
      loadLeaderboard();
      initBackToTop();

      // Initialize carousel
      const carousel = new bootstrap.Carousel("#saleProductsCarousel", {
        interval: 5000,
        ride: "carousel"
      });

      // Initialize testimonial carousel
      const testimonialCarousel = new bootstrap.Carousel("#testimonialCarousel");
    });

    // Recalculate product layout on window resize
    window.addEventListener('resize', loadSaleProducts);
  </script>
