{{!-- loan.hbs --}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{title}}</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    rel="stylesheet"
  />
  <style>
    .loan-card { margin-bottom: 1rem; }
    .loan-image { max-height: 150px; object-fit: cover; }
    .loan-status { font-weight: bold; }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">Maximum Gamers</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/loans">My Loans</a>
          </li>
          <li class="nav-item">
            <span class="nav-link">{{user.name}}</span>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Container -->
  <div class="container mt-4">
    <!-- Intro -->
    <div class="mb-4">
      <h2>Welcome, {{user.name}}!</h2>
      <p>
        Here you can view all your loan applications, apply for new loans,
        and track their current status in real time. Your approved loans will
        appear with a green badge, pending loans in yellow, and rejected loans
        in red.
      </p>
    </div>

    <!-- Loan Submission Form -->
    <div class="card mb-4">
      <div class="card-header">Apply for a New Loan</div>
      <div class="card-body">
        <form id="loanForm" action="/loans" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="description" class="form-label">Item Description</label>
            <input type="text" class="form-control" id="description" name="description" required />
          </div>
          <div class="mb-3">
            <label for="itemValue" class="form-label">Item Value ($)</label>
            <input type="number" class="form-control" id="itemValue" name="itemValue" step="0.01" min="0" required />
          </div>
          <div class="mb-3">
            <label for="loanAmount" class="form-label">Loan Amount ($)</label>
            <input type="number" class="form-control" id="loanAmount" name="loanAmount" step="0.01" min="0" required />
          </div>
          <div class="mb-3">
            <label for="loanPeriod" class="form-label">Loan Period (days)</label>
            <input type="number" class="form-control" id="loanPeriod" name="loanPeriod" min="1" required />
          </div>
          <div class="mb-3">
            <label for="itemImage" class="form-label">Item Image</label>
            <input class="form-control" type="file" id="itemImage" name="itemImage" accept="image/*" />
          </div>
          <button type="submit" class="btn btn-primary">Submit Loan</button>
        </form>
      </div>
    </div>

    <!-- Loan List -->
    <div class="row" id="loanList">
      {{#if loans.length}}
        {{#each loans}}
          <div class="col-md-6 loan-card" id="loan-{{_id}}">
            <div class="card">
              {{#if itemImage}}
                <img src="{{itemImage}}" class="card-img-top loan-image" alt="Item Image">
              {{/if}}
              <div class="card-body">
                <h5 class="card-title">{{description}}</h5>
                <p class="card-text"><strong>Item Value:</strong> ${{itemValue}}</p>
                <p class="card-text"><strong>Loan Amount:</strong> ${{loanAmount}}</p>
                <p class="card-text"><strong>Loan Period:</strong> {{loanPeriod}} days</p>
                <p class="card-text loan-status">
                  <strong>Status:</strong>
                  {{#ifEquals status "Pending"}}
                    <span class="badge bg-warning text-dark">{{status}}</span>
                  {{else ifEquals status "Approved"}}
                    <span class="badge bg-success">{{status}}</span>
                  {{else ifEquals status "Rejected"}}
                    <span class="badge bg-danger">{{status}}</span>
                  {{else}}
                    <span class="badge bg-secondary">{{status}}</span>
                  {{/ifEquals}}
                </p>
                <p class="card-text"><small class="text-muted">Applied on: {{createdAt}}</small></p>
              </div>
            </div>
          </div>
        {{/each}}
      {{else}}
        <p>No loans found. Apply for a new loan above.</p>
      {{/if}}
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();

    // Listen for new loans
    socket.on("loanCreated", (loan) => {
      const loanList = document.getElementById("loanList");
      const loanCard = document.createElement("div");
      loanCard.className = "col-md-6 loan-card";
      loanCard.id = "loan-" + loan._id;
      loanCard.innerHTML = `
        <div class="card">
          ${loan.itemImage ? `<img src="${loan.itemImage}" class="card-img-top loan-image" alt="Item Image">` : ""}
          <div class="card-body">
            <h5 class="card-title">${loan.description}</h5>
            <p class="card-text"><strong>Item Value:</strong> $${loan.itemValue}</p>
            <p class="card-text"><strong>Loan Amount:</strong> $${loan.loanAmount}</p>
            <p class="card-text"><strong>Loan Period:</strong> ${loan.loanPeriod} days</p>
            <p class="card-text loan-status">
              <strong>Status:</strong>
              <span class="badge bg-warning text-dark">${loan.status}</span>
            </p>
            <p class="card-text"><small class="text-muted">Applied on: ${new Date(loan.createdAt).toLocaleString()}</small></p>
          </div>
        </div>
      `;
      loanList.prepend(loanCard);
    });

    // Listen for loan updates
    socket.on("loanUpdated", (loan) => {
      const loanCard = document.getElementById("loan-" + loan._id);
      if (loanCard) {
        const badge = loanCard.querySelector(".loan-status span");
        badge.textContent = loan.status;
        if (loan.status === "Pending") badge.className = "badge bg-warning text-dark";
        else if (loan.status === "Approved") badge.className = "badge bg-success";
        else if (loan.status === "Rejected") badge.className = "badge bg-danger";
        else badge.className = "badge bg-secondary";
      }
    });
  </script>
</body>
</html>

