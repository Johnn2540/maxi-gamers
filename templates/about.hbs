<!-- Embedded Google Map added -->
<div class="text-center mt-4">
  <iframe 
    id="directionsMap"
    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDnphs9rressecIYYKehF89dWILJTWcMEs
    &q=Maximum+Gamers+K.M+Opposite+Student+Centre&zoom=17" 
    width="100%" 
    height="400" 
    style="border:0; border-radius:10px;" 
    loading="lazy" 
    allowfullscreen>
  </iframe>
</div>

<script>
  function openDirections() {
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(function(position) {
        let lat = position.coords.latitude;
        let lng = position.coords.longitude;

        // Update iframe with live directions (with closer zoom)
        let iframe = document.getElementById("directionsMap");
        iframe.src = `https://www.google.com/maps/embed/v1/directions?key=AIzaSyDnphs9rressecIYYKehF89dWILJTWcMEs
          &origin=${lat},${lng}
          &destination=Maximum+Gamers+K.M+Opposite+Student+Centre&zoom=17`;

        // Update "Open in Maps" link for mobile
        let mapsLink = document.getElementById("openInMaps");
        mapsLink.href = `https://www.google.com/maps/dir/?api=1&origin=${lat},${lng}&destination=Maximum+Gamers+K.M+Opposite+Student+Centre`;
      }, function() {
        alert("Could not get your location. Please enable GPS.");
      });
    } else {
      alert("Geolocation is not supported by your browser.");
    }
  }
</script>



