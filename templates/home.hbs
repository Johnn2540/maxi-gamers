<script>
  async function displayTopBar() {
    try {
      const res = await fetch('/top-bar/active');
      const data = await res.json();
      const container = document.getElementById('topBarMessages');

      const messages = data.success ? data.messages : [];

      if (!messages.length) {
        container.innerHTML = `<span>No announcements</span>`;
        return;
      }

      // Create a scrolling container for the messages
      container.innerHTML = `
        <div class="top-bar-scroll">
          ${messages.map(msg => `<span class="mx-4">${msg.content}</span>`).join("")}
        </div>
      `;
    } catch (err) {
      console.error("Error loading top bar:", err);
      document.getElementById('topBarMessages').innerHTML = 
        `<span class="text-danger">Error loading announcements</span>`;
    }
  }

  // Call once when page loads
  document.addEventListener("DOMContentLoaded", () => {
    displayTopBar();
  });
</script>


