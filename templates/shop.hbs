<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shop | Maximum Gamers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <link rel="manifest" href="/manifest.json">

  <style>
    .card-title { font-weight: bold; }
    .market-price { text-decoration: line-through; color: red; }
    .sale-price { font-weight: bold; font-size: 1.2em; }
    .add-to-cart { width: 100%; }

    /* Cart Sidebar */
    #cart-sidebar {
      position: fixed;
      right: 0;
      top: 0;
      height: 100%;
      width: 300px;
      background: #f8f9fa;
      border-left: 1px solid #ddd;
      padding: 1rem;
      overflow-y: auto;
      box-shadow: -2px 0 5px rgba(0,0,0,0.1);
      display: none;
      z-index: 1050;
    }
    #cart-sidebar h4 { margin-bottom: 1rem; }
    .cart-item { border-bottom: 1px solid #ddd; padding: 0.5rem 0; }
    .cart-item:last-child { border-bottom: none; }

    #cart-toggle {
      position: fixed;
      right: 320px;
      top: 1rem;
      z-index: 1100;
    }
  </style>
</head>
<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
    <div class="container-fluid">
      <!-- Small screen brand -->
      <a class="navbar-brand d-lg-none fw-bold" href="#">Maximum Gamers</a>

      <!-- Cart + Toggler (always visible on small screens) -->
      <div class="d-flex align-items-center ms-auto">
        <!-- Cart Button with Dynamic Badge -->
        <a href="javascript:void(0)" id="navbar-cart-btn" class="btn position-relative me-2">
          <i class="bi bi-cart3 fs-5 text-white"></i>
          <span id="cart-badge" class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
            0
          </span>
        </a>

        <!-- Hamburger -->
        <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#mobileMenu">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>

      <!-- Full nav (hidden on small screens) -->
      <div class="collapse navbar-collapse d-none d-lg-flex justify-content-center">
        <ul class="navbar-nav">
          <li class="nav-item"><a class="nav-link" href="/user">Home</a></li>
          <li class="nav-item"><a class="nav-link active" href="/shop">Shop</a></li>
          <li class="nav-item"><a class="nav-link" href="/gaming">Booking</a></li>
          <li class="nav-item"><a class="nav-link" href="/loans">Loans</a></li>
          <li class="nav-item"><a class="nav-link" href="/contact">Contact</a></li>
          <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
          <li class="nav-item"><a class="nav-link" href="/about">About</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- OFFCANVAS MENU (Mobile Sidebar) -->
  <div class="offcanvas offcanvas-end bg-dark text-white" tabindex="-1" id="mobileMenu">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title">Menu</h5>
      <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"></button>
    </div>
    <div class="offcanvas-body d-flex flex-column">
      <ul class="navbar-nav flex-grow-1">
        <li class="nav-item"><a class="nav-link text-white" href="/user">Home</a></li>
        <li class="nav-item"><a class="nav-link text-white active" href="/shop">Shop</a></li>
        <li class="nav-item"><a class="nav-link text-white" href="/gaming">Booking</a></li>
        <li class="nav-item"><a class="nav-link text-white" href="/loans">Loans</a></li>
        <li class="nav-item"><a class="nav-link text-white" href="/contact">Contact</a></li>
        <li class="nav-item"><a class="nav-link text-white" href="/profile">Profile</a></li>
        <li class="nav-item"><a class="nav-link text-white" href="/about">About</a></li>
      </ul>
      <a href="/login" class="btn btn-danger mt-auto">Logout</a>
    </div>
  </div>

  <!-- SHOP CONTENT -->
  <div class="container my-5">
    <h1 class="text-center mb-4">üõí Our Products</h1>
    <div class="row" id="shop-products">
      <p class="text-center">Loading products...</p>
    </div>
  </div>

  <!-- Floating Cart Toggle Button -->
  <button class="btn btn-primary" id="cart-toggle">
    <i class="bi bi-cart"></i> Cart (<span id="cart-count">0</span>)
  </button>

  <!-- Cart Sidebar -->
  <div id="cart-sidebar">
    <h4>üõç Your Cart</h4>
    <div id="cart-items"></div>
    <hr>
    <p class="fw-bold">Total: Ksh <span id="cart-total">0</span></p>
    <button class="btn btn-success w-100" id="checkout-btn">Checkout</button>
    <button class="btn btn-secondary w-100 mt-2" id="close-cart">Close</button>
  </div>

  <!-- Scripts -->
  <script>
    const cart = [];

    function updateCartUI() {
      const itemsContainer = document.getElementById('cart-items');
      const totalEl = document.getElementById('cart-total');
      const countEl = document.getElementById('cart-count');
      const badgeEl = document.getElementById('cart-badge');

      if (!cart.length) {
        itemsContainer.innerHTML = '<p>Your cart is empty</p>';
        totalEl.textContent = '0';
        countEl.textContent = '0';
        badgeEl.textContent = '0';
        return;
      }

      let total = 0;
      itemsContainer.innerHTML = cart.map((item, idx) => {
        total += item.salePrice;
        return `
          <div class="cart-item d-flex justify-content-between align-items-center">
            <span>${item.title}</span>
            <span>Ksh ${item.salePrice}</span>
            <button class="btn btn-sm btn-danger remove-item" data-index="${idx}"><i class="bi bi-x"></i></button>
          </div>
        `;
      }).join('');

      totalEl.textContent = total;
      countEl.textContent = cart.length;
      badgeEl.textContent = cart.length;

      // Remove item event
      document.querySelectorAll('.remove-item').forEach(btn => {
        btn.addEventListener('click', () => {
          const index = btn.dataset.index;
          cart.splice(index, 1);
          updateCartUI();
        });
      });
    }

    async function loadProducts() {
      try {
        const res = await fetch('/products/json');
        const products = await res.json();
        const container = document.getElementById('shop-products');

        if (!products.length) {
          container.innerHTML = '<p class="text-center">No products available</p>';
          return;
        }

        container.innerHTML = products.map(p => `
          <div class="col-md-4 col-lg-3 mb-4">
            <div class="card h-100 shadow-sm">
              <img src="${p.image}" class="card-img-top" alt="${p.title}" style="height: 200px; object-fit: cover;">
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">${p.title}</h5>
                <p class="card-text text-truncate">${p.description}</p>
                <p class="card-text mb-2">
                  <span class="market-price">Ksh ${p.marketPrice}</span>
                  <span class="sale-price ms-2">Ksh ${p.salePrice}</span>
                </p>
                <button class="btn btn-primary mt-auto add-to-cart" data-id="${p._id}" data-title="${p.title}" data-price="${p.salePrice}">
                  <i class="bi bi-cart-plus"></i> Add to Cart
                </button>
              </div>
            </div>
          </div>
        `).join('');

        // Add to Cart
        document.querySelectorAll('.add-to-cart').forEach(btn => {
          btn.addEventListener('click', () => {
            const id = btn.dataset.id;
            const title = btn.dataset.title;
            const salePrice = parseFloat(btn.dataset.price);
            cart.push({ id, title, salePrice });
            updateCartUI();
            document.getElementById('cart-sidebar').style.display = 'block';
          });
        });

      } catch (err) {
        console.error('Failed to load products:', err);
        document.getElementById('shop-products').innerHTML =
          '<p class="text-danger text-center">Failed to load products</p>';
      }
    }

    // Toggle cart (floating button + navbar button)
    document.getElementById('cart-toggle').addEventListener('click', () => {
      const sidebar = document.getElementById('cart-sidebar');
      sidebar.style.display = sidebar.style.display === 'block' ? 'none' : 'block';
    });
    document.getElementById('navbar-cart-btn').addEventListener('click', () => {
      const sidebar = document.getElementById('cart-sidebar');
      sidebar.style.display = sidebar.style.display === 'block' ? 'none' : 'block';
    });

    document.getElementById('close-cart').addEventListener('click', () => {
      document.getElementById('cart-sidebar').style.display = 'none';
    });

    document.getElementById('checkout-btn').addEventListener('click', () => {
      alert('Checkout coming soon, visit our shop,KM, opposite shopping center,1st floor. For more info, call or whatsapp: 0718804786');
    });

    window.addEventListener('DOMContentLoaded', loadProducts);
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
