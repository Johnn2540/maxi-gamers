<script>
  // ========== Load On-Sale Products (Display Only) ==========
  async function loadSaleProducts() {
    try {
      const res = await fetch('/products/json');
      const products = await res.json();
      const saleProducts = products.filter(p => p.onSale === true);
      const container = document.getElementById('sale-products-container');

      if (!saleProducts.length) {
        container.innerHTML = `
          <div class="carousel-item active text-center py-5">
            <h5 class="text-muted">No products currently on sale</h5>
          </div>`;
        return;
      }

      // Split products into chunks (3 per slide for desktop)
      const chunkSize = window.innerWidth < 768 ? 1 : 3;
      const productChunks = [];
      for (let i = 0; i < saleProducts.length; i += chunkSize) {
        productChunks.push(saleProducts.slice(i, i + chunkSize));
      }

      container.innerHTML = productChunks.map((group, idx) => `
        <div class="carousel-item ${idx === 0 ? 'active' : ''}">
          <div class="row justify-content-center">
            ${group.map(p => {
              // Handle image
              let imageUrl = '/images/placeholder.png';
              if (p.images && Array.isArray(p.images) && p.images.length > 0) {
                imageUrl = typeof p.images[0] === 'string'
                  ? p.images[0]
                  : p.images[0].url || '/images/placeholder.png';
              } else if (p.image) {
                imageUrl = p.image;
              }

              return `
                <div class="col-12 col-sm-6 col-lg-4 mb-4">
                  <div class="card shadow-sm h-100 border-0">
                    <img src="${imageUrl}" 
                         class="card-img-top" 
                         alt="${p.title}" 
                         style="height:220px; object-fit:cover; border-radius:0.5rem 0.5rem 0 0;"
                         onerror="this.src='/images/placeholder.png'">
                    <div class="card-body">
                      <h5 class="card-title text-dark text-truncate">${p.title}</h5>
                      <p class="card-text small text-muted text-truncate">${p.description || ''}</p>
                      <p class="mb-0">
                        <span class="text-danger text-decoration-line-through">Ksh ${p.marketPrice}</span>
                        <span class="fw-bold text-success ms-2">Ksh ${p.salePrice}</span>
                      </p>
                    </div>
                  </div>
                </div>
              `;
            }).join('')}
          </div>
        </div>
      `).join('');
    } catch (err) {
      console.error('Error loading sale products:', err);
      document.getElementById('sale-products-container').innerHTML = `
        <div class="carousel-item active text-center py-5">
          <h5 class="text-danger">Error loading products</h5>
        </div>`;
    }
  }

  window.addEventListener('DOMContentLoaded', loadSaleProducts);
  window.addEventListener('resize', loadSaleProducts);

  // ========== Directions Function ==========
  function openDirections() {
    const spinner = document.getElementById("spinner");
    const button = document.getElementById("getDirectionsBtn");
    spinner.classList.remove("d-none");
    button.disabled = true;

    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(function(position) {
        const lat = position.coords.latitude;
        const lng = position.coords.longitude;
        const destination = encodeURIComponent("Maximum Gamers K.M Opposite Student Centre");

        // Update iframe and link
        const iframe = document.getElementById("directionsMap");
        iframe.src = `https://www.google.com/maps/embed/v1/directions?key=AIzaSyDnphs9rressecIYYKehF89dWILJTWcMEs&origin=${lat},${lng}&destination=${destination}`;
        const mapsLink = document.getElementById("openInMaps");
        mapsLink.href = `https://www.google.com/maps/dir/?api=1&origin=${lat},${lng}&destination=${destination}`;

        document.getElementById("mapContainer").scrollIntoView({ behavior: "smooth" });

        setTimeout(() => {
          spinner.classList.add("d-none");
          button.disabled = false;
        }, 1500);

      }, function() {
        alert("Could not get your location. Please enable GPS.");
        spinner.classList.add("d-none");
        button.disabled = false;
      });
    } else {
      alert("Geolocation is not supported by your browser.");
      spinner.classList.add("d-none");
      button.disabled = false;
    }
  }
</script>


