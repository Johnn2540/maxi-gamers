<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Signup | Maximum Gamers</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

  <style>
    body {
      background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 20px;
    }
    .signup-container { width: 100%; max-width: 900px; }
    .card {
      border: none;
      border-radius: 20px;
      overflow: hidden;
      backdrop-filter: blur(12px);
      box-shadow: 0 10px 35px rgba(0,0,0,0.25);
    }
    .signup-left {
      background: url('https://images.unsplash.com/photo-1550745165-9bc0b252726f?auto=format&fit=crop&w=900&q=80') center/cover no-repeat;
      position: relative;
      min-height: 100%;
    }
    .signup-left::before {
      content: "";
      position: absolute; inset: 0;
      background: linear-gradient(to bottom right, rgba(106,17,203,0.8), rgba(37,117,252,0.8));
    }
    .signup-left-content {
      position: relative; z-index: 2;
      color: #fff;
      padding: 50px 30px;
    }
    .signup-left-content h2 { font-weight: 700; font-size: 32px; }
    .signup-left-content ul { padding-left: 20px; margin-top: 15px; }
    .signup-left-content li { margin-bottom: 10px; font-size: 15px; }
    .form-label { font-weight: 600; }
    .form-control {
      border-radius: 10px;
      padding: 12px 14px;
      border: 2px solid #eef0f3;
      transition: 0.3s;
    }
    .form-control:focus {
      border-color: #6a11cb;
      box-shadow: 0 0 0 0.25rem rgba(106,17,203,0.25);
    }
    .password-container { position: relative; }
    .password-toggle {
      cursor: pointer;
      position: absolute;
      right: 12px; top: 50%;
      transform: translateY(-50%);
      color: #6c757d;
    }
    .btn-signup {
      background: linear-gradient(to right, #6a11cb, #2575fc);
      border: none;
      color: white;
      padding: 12px;
      border-radius: 10px;
      font-weight: 600;
      font-size: 16px;
      transition: 0.3s;
    }
    .btn-signup:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 18px rgba(106,17,203,0.4);
    }
    .btn-google {
      background: #fff;
      border: 2px solid #ddd;
      border-radius: 10px;
      padding: 12px;
      font-weight: 600;
      font-size: 15px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
      transition: 0.3s;
    }
    .btn-google img { width: 20px; }
    .btn-google:hover { background: #f8f8f8; border-color: #bbb; }
    .input-feedback { font-size: 13px; margin-top: 2px; }

    #flashMsg {
      position: fixed;
      top: 20px;
      left: 50%;
      transform: translateX(-50%);
      width: 90%;
      max-width: 500px;
      z-index: 1050;
    }
  </style>
</head>
<body>

  <!-- Flash message -->
  <div id="flashMsg">
    {{#if flash}}
      <div class="alert alert-{{flash.type}} alert-dismissible fade show d-flex justify-content-between align-items-center" role="alert">
        {{flash.message}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    {{/if}}
  </div>

  <div class="signup-container">
    <div class="card">
      <div class="row g-0">
        <!-- Left side -->
        <div class="col-md-5 d-none d-md-block signup-left">
          <div class="signup-left-content">
            <h2>Join Maximum Gamers</h2>
            <p class="mt-3">Unlock exclusive features:</p>
            <ul>
              <li><i class="fas fa-gamepad me-2"></i> Track your gaming progress</li>
              <li><i class="fas fa-trophy me-2"></i> Borrow and rent items</li>
              <li><i class="fas fa-users me-2"></i> Connect with fellow gamers</li>
              <li><i class="fas fa-gift me-2"></i> Book special gaming sessions</li>
            </ul>
          </div>
        </div>

        <!-- Right side form -->
        <div class="col-md-7 p-4 bg-white">
          <h3 class="fw-bold mb-3">Create Your Account</h3>
          <form id="signupForm" method="POST" action="/signup">
            <div class="row">
              <div class="col-md-6 mb-3">
                <label for="name" class="form-label">User Name</label>
                <input type="text" id="name" name="name" class="form-control" required>
              </div>
              <div class="col-md-6 mb-3">
                <label for="studentId" class="form-label">Student ID (or Nil)</label>
                <input type="text" id="studentId" name="studentId" class="form-control">
              </div>
            </div>

            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" id="email" name="email" class="form-control" required>
              <div id="emailFeedback" class="input-feedback text-danger"></div>
            </div>

            <div class="mb-3">
              <label for="phone" class="form-label">Phone</label>
              <input type="tel" id="phone" name="phone" class="form-control" required>
              <div id="phoneFeedback" class="input-feedback text-danger"></div>
            </div>

            <div class="mb-3 password-container">
              <label for="password" class="form-label">Password</label>
              <input type="password" id="password" name="password" class="form-control" required>
              <span class="password-toggle" id="passwordToggle"><i class="fas fa-eye"></i></span>
              <div class="form-text">Must be at least 6 characters, with 1 letter & 1 number</div>
            </div>

            <div class="mb-3 password-container">
              <label for="confirmPassword" class="form-label">Confirm Password</label>
              <input type="password" id="confirmPassword" name="confirmPassword" class="form-control" required>
              <span class="password-toggle" id="confirmPasswordToggle"><i class="fas fa-eye"></i></span>
            </div>

            <div class="mb-3 form-check">
              <input type="checkbox" class="form-check-input" id="terms" required>
              <label class="form-check-label" for="terms">
                I agree to the <a href="/terms">Terms</a> & <a href="/privacy-policy">Privacy Policy</a>
              </label>
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-signup btn-lg">Create Account</button>
              <div class="text-center fw-bold my-2">OR</div>
              <button type="button" class="btn btn-google btn-lg" onclick="window.location.href='/auth/google'">
                <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google Logo">
                Sign up with Google
              </button>
            </div>

            <div class="text-center mt-4">
              <p class="mb-0 text-muted">
                Already a member?
                <a href="/login" class="fw-bold text-decoration-none" style="color:#6a11cb;">Login here</a>
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
  // ================== PASSWORD TOGGLE ==================
  function setupToggle(toggleId, inputId) {
    const toggle = document.getElementById(toggleId);
    const input = document.getElementById(inputId);
    toggle.addEventListener("click", () => {
      input.type = input.type === "password" ? "text" : "password";
      toggle.querySelector("i").classList.toggle("fa-eye");
      toggle.querySelector("i").classList.toggle("fa-eye-slash");
    });
  }
  setupToggle("passwordToggle", "password");
  setupToggle("confirmPasswordToggle", "confirmPassword");

  // ================== FORM ELEMENTS ==================
  const signupBtn = document.querySelector(".btn-signup");
  const emailInput = document.getElementById("email");
  const phoneInput = document.getElementById("phone");
  const emailFeedback = document.getElementById("emailFeedback");
  const phoneFeedback = document.getElementById("phoneFeedback");

  // ================== PASSWORD CONFIRM VALIDATION ==================
  document.getElementById("signupForm").addEventListener("submit", async (e) => {
    const pass = document.getElementById("password").value;
    const confirm = document.getElementById("confirmPassword").value;

    if (pass !== confirm) {
      e.preventDefault();
      alert("Passwords do not match.");
      return;
    }

    if (signupBtn.disabled) {
      e.preventDefault();
      alert("Please fix the highlighted issues before signing up.");
      return;
    }
  });

  // ================== CHECK USER FIELD ==================
  async function checkUserField(field, value, feedbackEl) {
    if (!value.trim()) {
      feedbackEl.textContent = "";
      feedbackEl.classList.remove("text-danger", "text-success");
      signupBtn.disabled = false;
      return;
    }

    try {
      const res = await fetch("/check-user", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ [field]: value })
      });
      const data = await res.json();

      if (data.exists) {
        feedbackEl.textContent = data.message;
        feedbackEl.classList.remove("text-success");
        feedbackEl.classList.add("text-danger");
        signupBtn.disabled = true;
      } else {
        feedbackEl.textContent = "âœ“ Available";
        feedbackEl.classList.remove("text-danger");
        feedbackEl.classList.add("text-success");
        signupBtn.disabled = false;
      }
    } catch (err) {
      console.error("Check-user error:", err);
      signupBtn.disabled = false;
    }
  }

  // ================== LIVE FIELD CHECK ==================
  emailInput.addEventListener("blur", (e) =>
    checkUserField("email", e.target.value, emailFeedback)
  );
  phoneInput.addEventListener("blur", (e) =>
    checkUserField("phone", e.target.value, phoneFeedback)
  );
</script>


</body>
</html>
