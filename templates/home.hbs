<script>
  // ========== Scroll Animations ==========
  function initScrollAnimations() {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
        }
      });
    }, observerOptions);

    document.querySelectorAll('.fade-in-up').forEach(el => {
      observer.observe(el);
    });
  }

  // ========== Load On-Sale Products with Enhanced Animation ==========
  async function loadSaleProducts() {
    try {
      const res = await fetch('/products/json');
      const products = await res.json();
      const saleProducts = products.filter(p => p.onSale === true);
      const container = document.getElementById('sale-products-container');

      if (!saleProducts.length) {
        container.innerHTML = `
          <div class="carousel-item active text-center py-5">
            <h5 class="text-muted">No products currently on sale</h5>
            <p class="text-muted">Check back later for amazing deals!</p>
          </div>`;
        return;
      }

      const chunkSize = window.innerWidth < 768 ? 1 : 3;
      const productChunks = [];
      for (let i = 0; i < saleProducts.length; i += chunkSize) {
        productChunks.push(saleProducts.slice(i, i + chunkSize));
      }

      container.innerHTML = productChunks.map((group, idx) => `
        <div class="carousel-item ${idx === 0 ? 'active' : ''}">
          <div class="row justify-content-center">
            ${group.map((p, productIndex) => {
              let imageUrl = '/images/placeholder.png';
              if (p.images && Array.isArray(p.images) && p.images.length > 0) {
                imageUrl = typeof p.images[0] === 'string'
                  ? p.images[0]
                  : p.images[0].url || '/images/placeholder.png';
              } else if (p.image) {
                imageUrl = p.image;
              }

              const discount = Math.round(((p.marketPrice - p.salePrice) / p.marketPrice) * 100);

              return `
                <div class="col-12 col-sm-6 col-lg-4 mb-4">
                  <div class="product-card h-100" style="transition-delay: ${productIndex * 0.1}s">
                    <div class="position-relative">
                      <span class="sale-badge">${discount}% OFF</span>
                      <img src="${imageUrl}" 
                           class="product-image w-100" 
                           alt="${p.title}"
                           onerror="this.src='/images/placeholder.png'">
                    </div>
                    <div class="card-body d-flex flex-column">
                      <h5 class="card-title text-light">${p.title}</h5>
                      <p class="card-text small text-muted flex-grow-1">${p.description || 'Premium gaming accessory'}</p>
                      <div class="price-section">
                        <div class="d-flex justify-content-between align-items-center">
                          <span class="text-danger text-decoration-line-through">Ksh ${p.marketPrice}</span>
                          <span class="fw-bold text-success fs-5">Ksh ${p.salePrice}</span>
                        </div>
                        <small class="text-warning">Save Ksh ${p.marketPrice - p.salePrice}</small>
                      </div>
                      <button class="btn btn-success w-100 mt-2">
                        <i class="bi bi-cart-plus me-2"></i>Add to Cart
                      </button>
                    </div>
                  </div>
                </div>
              `;
            }).join('')}
          </div>
        </div>
      `).join('');

      // Animate product cards after they are loaded
      setTimeout(() => {
        document.querySelectorAll('.product-card').forEach((card, index) => {
          setTimeout(() => {
            card.classList.add('animated');
          }, index * 100);
        });
      }, 500);

    } catch (err) {
      console.error('Error loading sale products:', err);
      container.innerHTML = `
        <div class="carousel-item active text-center py-5">
          <h5 class="text-danger">Error loading products</h5>
          <p class="text-muted">Please try again later</p>
        </div>`;
    }
  }

  // ========== Initialize Everything ==========
  document.addEventListener('DOMContentLoaded', () => {
    displayTopBar();
    loadSaleProducts();
    loadLeaderboard();
    initScrollAnimations();
    initBackToTop();

    // Initialize carousels
    const carousel = new bootstrap.Carousel("#saleProductsCarousel", {
      interval: 5000,
      ride: "carousel"
    });

    const testimonialCarousel = new bootstrap.Carousel("#testimonialCarousel");
  });

  // Back to Top functionality
  function initBackToTop() {
    const backToTopButton = document.getElementById('backToTop');
    
    window.addEventListener('scroll', () => {
      if (window.pageYOffset > 300) {
        backToTopButton.classList.add('show');
      } else {
        backToTopButton.classList.remove('show');
      }
    });
    
    backToTopButton.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
  }

  // Recalculate product layout on window resize
  window.addEventListener('resize', loadSaleProducts);
</script>

